<launch>
  <!-- 1. 加载机器人描述和启动 Gazebo (复用现有逻辑) -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>
  
  <param name="robot_description" command="$(find xacro)/xacro '$(find balance_description)/urdf/balance.urdf.xacro'"/>
  
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model balance_car -param robot_description -x 0 -y 0 -z 0.2" />

  <!-- 2. 加载控制器参数 -->
  <rosparam file="$(find balance_controller)/config/balance_control.yaml" command="load"/>
  <rosparam file="$(find balance_description)/config/balance.yaml" command="load"/>

  <!-- 3. 启动 Controller Manager -->
  <!-- 注意：这里同时加载 joint_state_controller 以便查看关节状态 -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="joint_state_controller balance_controller"/>

  <!-- 4. 状态发布器 -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
</launch>